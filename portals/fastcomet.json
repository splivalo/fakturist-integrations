{
  "id": "fastcomet",
  "displayName": "FastComet",
  "category": "cat_infrastructure",
  "syncType": "hybrid",
  "status": "active",
  "configSchema": {
    "fields": [
      {
        "key": "email",
        "labelKey": "email",
        "placeholderKey": "emailPlaceholderExample",
        "type": "email",
        "required": true
      },
      {
        "key": "password",
        "labelKey": "password",
        "placeholderKey": "passwordPlaceholder",
        "type": "password",
        "required": true
      }
    ],
    "email_sync": {
      "from_email": "support@fastcomet.com",
      "subject_pattern": ".*Invoice.*",
      "match_type": "contains",
      "search_text": "Invoice"
    },
    "manual_sync": {
      "steps": [
        {
          "action": "navigate",
          "value": "https://cloud.fastcomet.com/login"
        },
        {
          "action": "type",
          "value": "{username}",
          "selector": "input[autocomplete=\"email\"]"
        },
        {
          "action": "type",
          "value": "{password}",
          "selector": "input[type=\"password\"]"
        },
        {
          "action": "click",
          "value": "submit",
          "selector": "button[type=\"submit\"]"
        },
        {
          "action": "wait",
          "value": "2000"
        },
        {
          "action": "navigate",
          "value": "https://cloud.fastcomet.com/billing/invoices"
        },
        {
          "action": "wait",
          "value": "2000"
        },
        {
          "action": "click",
          "value": "submit",
          "selector": "button[aria-haspopup=\"menu\"]",
          "rowSelector": "table tbody tr:has(button[aria-haspopup='menu'])",
          "isRowAction": true,
          "maxPages": 1,
          "isGroupStart": true
        },
        {
          "action": "wait",
          "value": "500",
          "rowSelector": "table tbody tr:has(button[aria-haspopup='menu'])",
          "isRowAction": true,
          "maxPages": 1
        },
        {
          "action": "download",
          "value": "",
          "selector": "text=Download",
          "rowSelector": "table tbody tr:has(button[aria-haspopup='menu'])",
          "isRowAction": true,
          "maxPages": 1
        }
      ],
      "extract_config": {
        "invoice_number": {
          "selector": "td:nth-child(1)"
        },
        "invoice_date": {
          "selector": "td:nth-child(2)"
        },
        "amount": {
          "selector": "td:nth-child(3)"
        }
      }
    }
  },
  "uiMetadata": {
    "icon": "dns",
    "color": "#FF6C2C",
    "website": "https://www.fastcomet.com"
  },
  "scraperModule": "fastcomet"
}