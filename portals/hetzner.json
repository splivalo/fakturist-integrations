{
  "id": "hetzner",
  "displayName": "Hetzner",
  "category": "cat_infrastructure",
  "syncType": "hybrid",
  "status": "active",
  "configSchema": {
    "fields": [
      {
        "key": "email",
        "labelKey": "email",
        "placeholderKey": "emailPlaceholderExample",
        "type": "email",
        "required": true
      },
      {
        "key": "password",
        "labelKey": "password",
        "placeholderKey": "passwordPlaceholder",
        "type": "password",
        "required": true
      }
    ],
    "email_sync": {
      "from_email": "billing@hetzner.com",
      "subject_pattern": ".*Invoice.*",
      "match_type": "contains",
      "search_text": "Invoice"
    },
    "manual_sync": {
      "steps": [
        {
          "action": "navigate",
          "value": "https://accounts.hetzner.com/login"
        },
        {
          "action": "type",
          "value": "{email}",
          "selector": "input[type=\"text\"]"
        },
        {
          "action": "type",
          "value": "{password}",
          "selector": "input[type=\"password\"]"
        },
        {
          "action": "click",
          "value": "submit",
          "selector": "input[type=\"submit\"]"
        },
        {
          "action": "wait",
          "value": "2000"
        },
        {
          "action": "navigate",
          "value": "https://accounts.hetzner.com/invoice"
        },
        {
          "action": "download",
          "value": "",
          "selector": "a[href$='pdf']",
          "rowSelector": ".invoice-container .invoice-list li",
          "isRowAction": true,
          "maxPages": 5,
          "isGroupStart": true
        }
      ],
      "extract_config": {
        "invoice_number": {
          "selector": "span.invoice-number"
        },
        "invoice_date": {
          "selector": "span.invoice-date"
        },
        "amount": {
          "selector": "span.invoice-value"
        }
      }
    }
  },
  "uiMetadata": {
    "icon": "dns",
    "color": "#D50C2D",
    "website": "https://www.hetzner.com"
  },
  "scraperModule": "hetzner_scraper"
}